[user]
	name = Jackson Frankland
	email = jackson.frankland@blueglue.com.au
	signingKey = ""
    # https://stackoverflow.com/questions/48065535/should-i-keep-gitconfigs-signingkey-private
[core]
	autocrlf = input
	excludesfile = ~/.gitignore_global
	pager = delta
[commit]
	gpgSign = false
    template = ~/.gitmessage
[diff]
    colorMoved = default
[merge]
	conflictstyle = diff3
[interactive]
    # show a nicer diff when using `git add -p`
    diffFilter = delta --color-only
[delta]
	navigate = true
	light = false
	line-numbers = true
	side-by-side = true
[init]
	defaultBranch = main
[include]
    path = .gitconfig_aliases

